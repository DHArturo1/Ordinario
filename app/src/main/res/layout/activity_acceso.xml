<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccesoActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/AccesoIV1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ImageHeightA"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_margin="@dimen/PaddingA"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/AccesoTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INE"
        android:textSize="@dimen/TextViewA"
        android:layout_margin="@dimen/MarginA"
        android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AccesoET1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/MarginA"
        android:textColorHint="@color/colorINEA"
        app:boxStrokeColor="@color/colorINEB"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textSize="@dimen/InputTextA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="10dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_person_outline_black"
            android:textColorHint="@color/colorAccent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/AccesoET2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/colorINEA"
        app:boxStrokeColor="@color/colorINEB"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/InputTextA"
            android:layout_marginRight="@dimen/InputTextA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="10dp"
            android:drawablePadding="20dp"
            android:hint="ContraseÃ±a"
            android:textSize="@dimen/InputTextA"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/MarginTopA"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AccesoBT1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@drawable/boton2"
            android:text="Iniciar Sesion"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/AccesoBT2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="@drawable/boton1"
            android:layout_weight="1"
            android:text="Salir"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>